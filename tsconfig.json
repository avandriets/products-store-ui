{
  "compileOnSave": false,
  "compilerOptions": {
    "noUnusedLocals": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@products-store-ui/ui": ["libs/ui/src/index.ts"],
      "@products-store-ui/products-auth": ["libs/products-auth/src/index.ts"],
      "@products-store-ui/products-core": ["libs/products-core/src/index.ts"],
      "@products-store-ui/configuration": ["libs/configuration/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
